<section class="all_orders">
    <section class="order-history">
        <div class="container-fluid my-5  d-flex  justify-content-center">
            <div class="card w-100">
                <div class="card-body ">
                    <h4>restaurant/orders</h4>
                    {{#each cart}}
                    <div class="row">
                        <div class="col">
                            <div class="media">
                                <div class="media-body my-auto text-right">
                                    <div class="order-card  my-auto flex-column flex-md-row">
                                        <div class=" my-auto flex-column align-items-center justify-content-center">
                                            <div
                                                class="sq align-self-center d-flex justify-content-center align-items-center">
                                                <img class="img-fluid  align-self-center" src="{{this.image2}}"
                                                    width="135" height="135" />
                                            </div>
                                        </div>
                                        <div class=" my-auto flex-column align-items-center justify-content-center">
                                            <h4 class="mb-0 d-flex justify-content-center align-items-center">
                                                {{this.user_name}}
                                            </h4>
                                            <h6 class="mb-0 d-flex justify-content-center align-items-center">{{this.email}} </h6>
                                        </div>
                                        <div class="  my-auto flex-column align-items-center justify-content-center">
                                            <h6 class="d-flex justify-content-center align-items-center">Date:
                                                <span>{{this.date}} </span>
                                            </h6>

                                            <h6 class="d-flex justify-content-center align-items-center">Time:
                                                <span>{{this.time}} </span>
                                            </h6>

                                            <h6 class="d-flex justify-content-center align-items-center">Tables: <span>2
                                                </span></h6>
                                            <h6 class="d-flex justify-content-center align-items-center">Chairs: <span>4
                                                </span></h6>
                                        </div>
                                        <div class="  my-auto">
                                            <h6 class="mb-0 d-flex justify-content-center align-items-center"> Ordered
                                                Items
                                            </h6>
                                            <h6 class="swiper d-flex justify-content-center align-items-center">
                                                <div class="swiper mySwiper ">
                                                    <div class="swiper-wrapper">
                                                        {{#each this.items}}
                                                        <div
                                                            class="swiper-slide d-flex justify-content-center align-items-center">
                                                            <p class="text-danger">{{this.name}}<span
                                                                    class="badge">{{this.quantity}}</span></p>
                                                            <br>
                                                        </div>
                                                        {{/each}}
                                                    </div>
                                                    <div class="buttons">
                                                        <div class="swiper-button-next">
                                                            <i class="fa-solid fa-angle-right"></i>
                                                        </div>
                                                        <div class="swiper-button-prev">
                                                            <i class="fa-solid fa-chevron-left"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </h6>
                                            <h6 class="mb-0 d-flex justify-content-center align-items-center">price :
                                                &#8377;{{this.price}}</h6>
                                            <div class="d-flex justify-content-around mt-3">
                                                <h6 class="admin-order-confirmation-button">
                                                    <a href="">
                                                        <button type="button"
                                                            class="btn btn-outline-danger">cancel</button>
                                                    </a>
                                                </h6>
                                                <h6 class="admin-order-confirmation-button ">
                                                    <a href="" class="">
                                                        <button type="button"
                                                            class="btn btn-outline-success">complete</button>
                                                    </a>
                                                </h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
    {{!-- swiper cdn --}}
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
    {{!-- css file --}}
    <link rel="stylesheet" href="/css/restaurant/orders.css">
    {{!-- js file --}}
    <script src="/js/order.js"></script>
</section>