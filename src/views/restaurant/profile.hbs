<H1>NEW PROFILE</H1>
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <form class="row col-lg-8" action="/restaurant/profile/save-details" method="post"
            enctype="multipart/form-data">

            <div class="col-lg-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <div class="swiper mySwiper">
                        <div class="swiper-wrapper mb-1">
                            {{#each restaurant.profile_pic}}
                            <div class="swiper-slide slide_1 w-100 d-flex justify-content-center"
                                style="aspect-ratio: 1/1;">
                                {{!-- <img class="img-fluid" src="{{this.url}}" alt=""> --}}
                                <img class="img-fluid rounded-circle " src="{{this.url}}" alt="profile">
                            </div>
                            {{/each}}
                        </div>
                        <div class="swiper-button-next"
                            style="background-color: #0000008d; color: white ;border-radius:10px;padding:25px;"></div>
                        <div class="swiper-button-prev"
                            style="background-color: #000000; color: white  ;border-radius:10px;padding:25px"></div>
                    </div>
                    {{!-- <img class="rounded-circle mt-5" width="150px" src="{{restaurant.profile_pic.0.url}}"
                        alt="profile"> --}}
                    <span class="font-weight-bold">{{restaurant.restaurant_name}}</span>
                    <span class="font-weight-bold">{{restaurant.email}}</span>
                    <span class="font-weight-bold">Opening time:{{prettifyDate restaurant.opening_time}}</span>
                    <span class="font-weight-bold">Closing time:{{prettifyDate restaurant.closing_time}}</span>
                    <span>
                        <label class="form-label label-hidden" for="customFile">Update Profile</label>
                        <input multiple type="file" name="profile_pic" class="form-control" id="customFile" />
                    </span>
                </div>
            </div>
            <div class="col-lg-8 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">Restaurant name</label><input type="text" class="form-control"
                                placeholder="first name" name="restaurant_name" value="{{restaurant.restaurant_name}}">
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Email</label><input type="text" class="form-control"
                                value="{{restaurant.email}}" name="email" placeholder="Email" readonly>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Address</label>
                            <input type="text" class="form-control" name="address" placeholder="Enter address"
                                value="{{restaurant.address}}">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Pincode</label>
                            <input type="text" name="pincode" class="form-control" placeholder="Enter pincode"
                                value="{{restaurant.pincode}}">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Phone number</label>
                            <input type="text" name="phone" class="form-control" placeholder="Enter phone number"
                                value="{{restaurant.phonenumber}}">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">GST Number</label>
                            <input type="text" name="gst_number" class="form-control" placeholder="Enter gst number"
                                value="{{restaurant.gst_number}}">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Description</label>
                            <input type="text" name="description" class="form-control" placeholder="Enter description"
                                value="{{restaurant.description}}">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Opening Time : </label>
                            <time class="labels font-weight-bold" datetime="1914-12-20 08:30:45.687">{{prettifyDate
                                restaurant.opening_time}}</time>
                            <input type="time" name="opening_time" class="form-control" placeholder="Enter opening time"
                                value="{{prettifyDate restaurant.opening_time}}">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Closing Time : </label>
                            <time class="labels font-weight-bold" datetime="1914-12-20 08:30:45.687">{{prettifyDate
                                restaurant.closing_time}}</time>
                            <input type="time" name="closing_time" class="form-control" placeholder="enter closing time"
                                value="{{restaurant.closing_time}}">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Pan number</label>
                            <input type="text" name="pan_number" class="form-control" placeholder="enter pan number"
                                value="{{restaurant.pan_number}}">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Password</label>
                            <input type="text" class="form-control" name="password" placeholder="Enter password"
                                value="">
                        </div>
                    </div>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Update
                            Profile</button></div>
                </div>
            </div>
        </form>
        <div class="col-lg-4">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center experience"><span>Change
                        Password</span></div>
                <div class="col-md-12"><label class="labels">Current password</label><input type="text"
                        class="form-control" placeholder="Enter your current password" value=""></div>
                <div class="col-md-12"><label class="labels">New password</label><input type="text" class="form-control"
                        placeholder="Enter new password" value=""></div>
                <div class="col-md-12"><label class="labels">Confirm new password</label><input type="text"
                        class="form-control" placeholder="Enter new password" value=""></div>
                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="button">Change
                        password</button></div>
            </div>
            <div class="p-3 py-5">
                <div class="text-danger d-flex justify-content-between align-items-center experience"><span
                        class="text-danger">Delete Account</span>
                </div>
                <small class="text-danger">Deleting your account is a permanent action
                    and cannot be undone. If you are sure you
                    <label class="text-dark text-bold">confirm password</label><br>
                    want to delete your account, select the button
                    below.</small>
                <div class="col-md-12"><label class="labels">Confirm password</label><input type="text"
                        class="form-control" placeholder="Enter new password" value=""></div>
                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="button">Change
                        password</button></div>
            </div>
        </div>
    </div>
</div>

