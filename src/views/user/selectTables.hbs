<section class="w-100">
    <form action="/check-out/{{restaurantId}}" method="post" style="height: 85vh;">
        <div class="mt-4 ml-2 dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Select Category
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="?category=All">All</a>
                <a class="dropdown-item" href="?category=Ac">Ac</a>
                <a class="dropdown-item" href="?category=Non_Ac">Non Ac</a>
            </div>
        </div>

        <div id="product-selection" class="products" style="min-height: 80%;">
            {{!-- <input type="text" value="{{restaurant._id}}" name="restaurantId" hidden> --}}
            {{#checklength tables 0}}
            {{#each tables}}
            <div class="food">
                <div class="card">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="w-25">
                            {{this.table_number}}
                        </div>
                        <div class="row w-75 ml-2 d-flex align-items-center justify-content-between">
                            <div class="d-flex">
                                <small>chair:{{this.chair}}</small>
                                <br>
                                <small class="ml-3">table:{{this.table}}</small>
                                <br>
                                <small class="ml-2">Type : {{this.air_conditioned}}</small>
                            </div>
                            <div class="ml-2">
                                <input type="checkbox" name="tables[]" value="{{this._id}}">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="alert alert-warning" role="alert">
                No tables available
            </div>
            {{/checklength}}
        </div>
        <div id="product-selection" class="row d-flex-column justify-content-center align-items-center"
            style="min-height: 20%;">
            {{#checklength tables 0}}
            <button type="submit" class="btn btn-primary p-2 m-2 w-100">check out</button>
            {{else}}
            <div class="alert alert-warning" role="alert">
                sorry No tables available
            </div>
            {{/checklength}}
        </div>
    </form>
</section>
