<section class="order-history">
    <div class="container-fluid my-5  d-flex  justify-content-center">
        <div class="card w-100">
            <div class="card-body ">
                <h4>home/wishlist</h4>
                {{#each cart}}
                <div class="row">
                    <div class="col">
                        <div class="media">
                            <div class="media-body my-auto text-right">
                                <div class="order-card  my-auto flex-column flex-md-row">
                                    <div class=" my-auto flex-column align-items-center justify-content-center">
                                        <div
                                            class="sq align-self-center d-flex justify-content-center align-items-center">
                                            <img class="img-fluid  align-self-center" src="{{this.image2}}" width="135"
                                                height="135" />
                                        </div>
                                    </div>
                                    <div class=" my-auto flex-column align-items-center justify-content-center">
                                        <h4 class="mb-0 d-flex justify-content-center align-items-center">{{this.name}}
                                        </h4>
                                        <small class="mb-0 d-flex justify-content-center align-items-center"><a
                                                class="label" href="">location</a> </small>
                                        <h6 class="mb-0 d-flex justify-content-center align-items-center">price :
                                            &#8377;{{this.price}}</h6>
                                    </div>
                                    <div class="  my-auto flex-column align-items-center justify-content-center">
                                        <h6 class="d-flex justify-content-center align-items-center text-success">open now</h6>

                                        <h6 class="d-flex justify-content-center align-items-center">Time:
                                            <span>{{this.time}} </span></h6>

                                        <h6 class="d-flex justify-content-center align-items-center">Tables: <span>2
                                            </span></h6>
                                        <h6 class="d-flex justify-content-center align-items-center">Chairs: <span>4
                                            </span></h6>
                                    </div>
                                    <div class="  my-auto">
                                        <h6 class="mt-4 d-flex justify-content-center align-items-center "><a href=""
                                                class="text-danger">remove from wishlist</a></h6>
                                        <h6 class="mt-4 d-flex justify-content-center align-items-center "><a href=""
                                                class="text-dark">show more details</a></h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                {{/each}}
                <div class="row">
                    <div class="col">
                        <div class="media">
                            <div class="media-body my-auto text-right">
                                <div class="  my-auto flex-column flex-md-row d-flex justify-content-center">
                                    <div class="total w-75 d-flex justify-content-end">
                                        <span>Total:{{total}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
