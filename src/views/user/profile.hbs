<section class="profile">
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-12 border-right ">
                <div class="p-3 py-5 ">
                    {{!-- user profile --}}
                    <form action="/restaurant/profile/save-details" method="post" enctype="multipart/form-data">
                        <div class="row mt-2">
                            <div class="col-md-12">
                                <label class="labels">{{err}}</label>
                            </div>
                        </div>
                        <div class="mt-2 d-flex justify-content-center align-items-center">
                            <div class="">
                                <div class="profile-pic">
                                    <label class="-label" for="file">
                                        <span class="glyphicon glyphicon-camera"></span>
                                        <span>Change Image</span>
                                    </label>
                                    <input id="file" name="profile_pic" type="file" onchange="loadFile(event)" />
                                    <img src="{{restaurant.profile_pic}}" alt="" id="output" width="200" />
                                </div>
                                <div class="d-flex-column justify-content-center align-items-center">
                                    <h6 class="font-weight-bold">{{restaurant.restaurant_name}}</h6>
                                    <h6 class="text-black-50">{{restaurant.email}}</h6>
                                </div>

                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">restaurant profile</h4>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <input type="text" name="restaurant_name" class="form-control"
                                    placeholder="restaurant name" value="{{restaurant.restaurant_name}}">
                                <label class="labels">name</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="email" class="form-control" value="{{restaurant.email}}"
                                    placeholder="email">
                                <label class="labels">email</label>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <input type="text" name="address" class="form-control" placeholder="restaurant name"
                                    value="{{restaurant.address}}">
                                <label class="labels">address</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="pincode" class="form-control" placeholder="restaurant name"
                                    value="{{restaurant.pincode}}">
                                <label class="labels">pincode</label>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <input type="tel" name="phone" class="form-control" id="phone"
                                    placeholder="enter the phone number" value="{{restaurant.phone}}">
                                <label class="labels">phone</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" value="{{restaurant.gst_number}}"
                                    name="gst_number" placeholder="GST identification number of restaurant ">
                                <label class="labels">gst in</label>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-12 form-group mb-3">
                                <textarea name="description" class="form-control validate" rows="10"
                                    placeholder="enter description...">{{restaurant.description}}
                                </textarea>
                                <label for="description">Description</label>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <input type="text" name="pan_number" class="form-control"
                                    value="{{restaurant.pan_number}}" placeholder="table">
                                <label class="labels">pancard</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="password" class="form-control" value=""
                                    placeholder="confirm your password">
                                <label class="labels">password</label>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <input type="submit" class="mt-2 btn btn-primary form-control" value="save details">
                            </div>
                        </div>
                    </form>
                    {{!-- table details --}}
                    <div class="d-flex justify-content-between align-items-center mt-5">
                        <h4 class="text-right">tables details</h4>
                    </div>
                    <small>available tables</small>
                    <div class="col-12 my-5" id="tables">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-link" data-toggle="modal"
                            data-target="#exampleModalCenter">
                            table 34
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">table 34</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        4 chair
                                        3 table
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{!-- update tables --}}
                    <form action="/restaurant/profile/update-tables" method="post">
                        <div class="row mt-5">
                            <div class="col-md-6">
                                <select name="category" id="chairType" onchange="changeChairCount()"
                                    class="form-select form-select-lg mb-3 w-100 p-2"
                                    aria-label=".form-select-lg example">
                                    <option selected>update tables</option>
                                    {{#each restaurant.tables}}
                                    <option value="{{this.chair}}">{{this.chair}} chair</option>
                                    {{/each}}
                                </select>
                                <label class="labels">update/add tables</label>
                            </div>
                            {{!-- <div class="col-md-6">
                                <input type="text" class="form-control" value="" name="table_number"
                                    placeholder="Enter your table number">
                                <label class="labels">table number</label>
                            </div> --}}
                            <div class="col-md-6">
                                <input type="text" id="chair" class="form-control" value="" name="total_chair"
                                    placeholder="chair for one table">
                                <label class="labels">chair</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" value="" name="total_table" placeholder="table">
                                <label class="labels">table</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="password" class="form-control" value=""
                                    placeholder="confirm your password">
                                <label class="labels">password</label>
                            </div>
                        </div>
                        <div class="row mt-2">
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <input type="submit" class="mt-2 btn btn-success form-control" value="add table">
                            </div>
                            <div class="col-md-6">
                                <input type="submit" class="mt-2 btn btn-primary form-control" value="save tables">
                            </div>
                        </div>
                    </form>
                    {{!-- change password --}}
