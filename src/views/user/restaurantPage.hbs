<section class="restaurant-details">
    <div class="topsection">
        <div class="small-images">
            <img style="cursor: pointer;" src="{{restaurant.image1}}" id="image1" onclick="showImage('image1')"
                class="preview-image" alt="">
            <img style="cursor: pointer;" src="{{restaurant.image2}}" id="image2" onclick="showImage('image2')"
                class="preview-image" alt="">
            <img style="cursor: pointer;" src="{{restaurant.image3}}" id="image3" onclick="showImage('image3')"
                class="preview-image" alt="">
        </div>
        <div class="big-image" id="big-image-preview">
            <img src="{{restaurant.image1}}" alt="">
        </div>
        <div class="details">
            <h1 class="heading" style="font-variant: small-caps;">{{restaurant.name}}</h1>
            <h6 class="place">{{restaurant.address}}</h6>
            <p class="description">{{restaurant.description}}</p>
            <h6>{{restaurant.price}}/table</h6>
            <h6>Time: {{restaurant.time}}</h6>
            <div class="other-options">
                <a href="#services">Services</a>
                <a href="#rating">Review</a>
                <a href="{{restaurant.id}}/available_foods">Available Foods</a>
            </div>
        </div>
    </div>
    <div class="middle-section">
        <div id="services">
            {{#each restaurant.services}}
            <div class="service">
                <h6>{{this.title}}</h6>
                <p>{{this.description}}</p>
            </div>
            {{/each}}
        </div>
        <div class="review-section">
            <div id="rating">
                <div class="container">
                    <div class="row mt-20">
                        <div class="col-md-4 d-flex flex-column justify-content-center align-items-center">
                            <div class="rating-box">
                                <h1 class="pt-4">4.0</h1>
                                <p class="">out of 5</p>
                            </div>
                            <div>
                                <span class="fa fa-star star-active mx-1"></span>
                                <span class="fa fa-star star-active mx-1"></span>
                                <span class="fa fa-star star-active mx-1"></span>
                                <span class="fa fa-star star-active mx-1"></span>
                                <span class="fa fa-star star-inactive mx-1"></span>
                            </div>
                        </div>

                        <div class="col">
                            <span class="skill"><i class="fa fa-star"></i> 5 Star</span>
                            <div class="progress skill-bar ">
                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50"
                                    aria-valuemin="0" aria-valuemax="100" style="width: 70%;">
                                    <span class="skill"> <i class="val">25 reviews</i></span>
                                </div>
                            </div>
                            <span class="skill"><i class="fa fa-star"></i> 4 Star</span>
                            <div class="progress skill-bar">
                                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="29"
                                    aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                                    <span class="skill"> <i class="val">25 reviews</i></span>

                                </div>
                            </div>
                            <span class="skill"><i class="fa fa-star"></i> 3 Star</span>
                            <div class="progress skill-bar">
                                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="29"
                                    aria-valuemin="0" aria-valuemax="100" style="width: 95%;">
                                    <span class="skill"> <i class="val">25 reviews</i></span>

                                </div>
                            </div>
                            <span class="skill"><i class="fa fa-star"></i> 2 Star</span>
                            <div class="progress skill-bar">
                                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="29"
                                    aria-valuemin="0" aria-valuemax="100" style="width: 70%;">
                                    <span class="skill"> <i class="val">25 reviews</i></span>
                                </div>
                            </div>
                            <span class="skill"><i class="fa fa-star"></i> 1 Star</span>
                            <div class="progress skill-bar">
                                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="29"
                                    aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                    <span class="skill"> <i class="val">25 reviews</i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="review">
                            <div class="review-profile">
                                <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png"
                                    alt="">
                                <div class="details">
                                    <h5>name</h5>
                                    <small>date</small>
                                </div>
                            </div>
                            <div class="review-content">
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Numquam ex molestias
                                    mollitia, doloribus fugit exercitationem expedita perferendis, odit nisi ratione
                                    sapiente, quam debitis consequuntur dicta voluptatem dolor a obcaecati deleniti!</p>
                            </div>
                            <div class="review-like-dislike">
                                <div class="like">
                                    <i class="fa-solid fa-thumbs-up"></i>
                                </div>
                                <div class="dislike">
                                    <i class="fa-solid fa-thumbs-down"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .review {
        margin-top: 50px;
    }

    .review-profile {
        width: 100%;
        display: flex;
        align-items: center;
    }

    .review-like-dislike {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .review-profile>img {
        width: 70px;
        object-fit: cover;
        border-radius: 50%;
        margin-right: 30px;
    }

    .like,
    .dislike {
        cursor: pointer;
    }

    .details>h5 {
        margin-bottom: 0;
    }

    .details>small {
        margin-top: 0;
        opacity: 0.5;
    }

    #services {
        display: grid;
        min-height: 300px;
        grid-template-columns: repeat(4, auto);
        padding: 30px;
        margin-top: 10px;
        background-color: rgba(242, 242, 242, 0.488);
    }

    @media (max-width:1200px) {
        #services {
            grid-template-columns: repeat(3, auto);
        }
    }

    @media (max-width:800px) {
        #services {
            grid-template-columns: repeat(2, auto);
        }
    }

    @media (max-width:560px) {
        #services {
            grid-template-columns: repeat(1, auto);
            justify-content: center;
            align-items: center;
        }
    }

    .service {
        width: 90%;
    }

    .mt-20 {
        margin-top: 100px;
    }

    .progress {
        height: 31px;
        margin-bottom: 10px;
    }


    .progress .skill {
        font: normal 12px "Open Sans Web";
        line-height: 32px;
        padding: 0;
        margin: 0 0 0 20px;
        text-transform: uppercase;
    }

    .progress .skill .val {
        float: right;
        font-style: normal;
        margin: 0 20px 0 0;
    }

    .progress-bar {
        text-align: left;
        transition-duration: 3s;
        background-color: orange;
    }

    .bsp_big-image {
        box-shadow: 1px 1px 5px 1px rgba(0, 0, 0, 0);
        border-radius: 5px;
        margin-top: 0px;
    }
</style>
<link rel="stylesheet" href="/css/user/restaurantPage.css">
<script>
    function showImage(id) {
        let thump = document.getElementById(id).src;
        document.getElementById('big-image-preview').innerHTML = `<img src=${thump} id="big-image-preview" alt="">`
    }
</script>