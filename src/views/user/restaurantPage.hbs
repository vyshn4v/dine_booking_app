<section class="restaurant-details container-fluid">
    <div class="topsection">
        <div class="big-image" id="big-image-preview">
            <div style="min-width: 400px;max-height: 300px;" id="carouselExampleControls" class="carousel slide"
                data-ride="carousel">
                <div class="carousel-inner">
                    {{#each restaurantDetails.profile_pic}}
                    {{#ifEquals @index "0"}}
                    <div class="carousel-item active">
                        <img class="d-block " style=" min-width: 400px;max-height: 300px;" src="{{this.url}}"
                            alt="First slide">
                    </div>
                    {{else}}
                    <div class="carousel-item">
                        <img class="d-block" style=" min-width: 400px;max-height: 300px;" src="{{this.url}}"
                            alt="First slide">
                    </div>
                    {{/ifEquals}}
                    {{/each}}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="details">
            <h1 class="heading" style="font-variant: small-caps;">{{restaurantDetails.name}}</h1>
            <h6 class="place">{{restaurantDetails.address}}</h6>
            <p class="description">{{restaurantDetails.description}}</p>
            <h6>{{restaurantDetails.price}}/table</h6>
            <h6>Time: {{restaurantDetails.time}}</h6>
            <div class="other-options">
                <a href="#services">Services</a>
                <a href="#rating">Review</a>
                <a href="{{restaurantDetails.id}}/available_foods">Available Foods</a>
            </div>
        </div>
    </div>
    <div class="middle-section">
        <div id="services">
            {{#each restaurant.services}}
            <div class="service">
                <h6>{{this.title}}</h6>
