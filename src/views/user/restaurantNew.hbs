<body oncontextmenu='return false' class='snippet-body'>
    <link rel='stylesheet' href='https://sachinchoolur.github.io/lightslider/dist/css/lightslider.css'>
    <div class="container-fluid mt-2 mb-3">
        <div class="row no-gutters">
            <div class="col-md-6 pr-2">
                <div class="card ">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-10">
                            <div class="card">
                                <div>
                                    <div class="">
                                        <div class="images">
                                            <div class="zoom text-center pb-1 d-flex justify-content-center">
                                                <img src="{{restaurantDetails.profile_pic.0.url}}" id="main-image"
                                                    class="ml-1"
                                                    style="min-width: 100%; height: 300px; object-fit: cover;">
                                            </div>
                                            <div class="thumbnail text-center d-flex justify-content-center">
                                                {{#each restaurantDetails.profile_pic}}
                                                <img class="ml-1" style="width: 80px; cursor: pointer;"
                                                    onclick="change_image(this)" src="{{this.url}}">
                                                {{/each}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="about"> <span class="font-weight-bold">{{restaurantDetails.restaurant_name}}</span>
                    </div>
                    <div class="product-description">
                        <div class="mt-2">
                            <span class="font-weight-bold">Opening Time</span>
                            <p>{{prettifyDate restaurantDetails.opening_time}}</p>
                            <span class="font-weight-bold">Closing Time</span>
                            <p>{{prettifyDate restaurantDetails.closing_time}}</p>
                            <span class="font-weight-bold">Description</span>
                            <p>{{restaurantDetails.description}}</p>
                            <div class="bullets">
                                {{#each restaurantDetails.services}}
                                <div class="d-flex align-items-center"> <span class="dot"></span> <span
                                        class="bullet-text">{{this.title}}</span> </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="buttons">
                        <a href="/{{restaurantDetails._id}}/buy-products">
                            <button class="btn btn-warning btn-long buy w-100">Buy</button>
                        </a>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>

    <script src='https://sachinchoolur.github.io/lightslider/dist/js/lightslider.js'></script>
    <script type='text/javascript'
        src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js'></script>
</body>
<script>
    function updateReview(id) {
        const baseUrl = window.location.origin;
        const review = document.getElementById('#review')
        fetch(baseUrl + '/update-review', {
            method: "PUT",
            headers: {
                'Content-type': 'application/json; charset=UTF-8'
            },
            body: JSON.stringify(review.innerText)
        })
        return false
    }
</script>
