<section style="height: 90vh;" class="d-flex justify-content-center">
    <div class="signup_page w-100 d-flex justify-content-center align-items-center">
        <div class="signup_header">
            <h4 class="d-flex justify-content-center align-items-center">signup</h4>
            {{#if err}}
            <small id="error" style=" height: 10px; color: red;">{{err}}</small>
            {{/err}}
            <small id="error" style=" height: 10px; color: red;"></small>
        </div>
        <form action="/signup" method="post">
            <div class="signup_inputs">
                <input type="text" name="username" placeholder="Enter the name">
                <label for="name">name</label>
                <input type="email" name="email" placeholder="Enter the Email address">
                <label for="email">Email</label>
                <input type="password" name="password" placeholder="Enter the password">
                <label for="password">password</label>
                <input type="password" name="confirm_password" placeholder="Confirm password">
                <label for="password">Confirm password</label>
            </div>
            <div class="signup_button">
                <input type="submit" class="w-100 mt-2 btn btn-outline-warning" name="" value="signup">
                <label for="forgot_password">Already have an account? <a href="/user_login" class="">Login</a></label>
            </div>
        </form>
    </div>
</section>
<link rel="stylesheet" href="css/user/signup.css">
<script>
    const inputs = document.getElementsByTagName("input")
    const error = document.getElementById("error")
    const form = document.querySelector("form")
    console.log(inputs[0].value)
    form.addEventListener("submit", (e) => {
        if (inputs[0].value?.length <= 0) {
            e.preventDefault()
            error.innerText = "enter the name"
            return false
        }
        if (inputs[1].value?.length <= 0) {
            e.preventDefault()
            error.innerText = "enter the email"
            return false
        }
        if (inputs[2].value?.length <= 0) {
            e.preventDefault()
            error.innerText = "enter the password"
            return false
        }
        if (inputs[3].value?.length <= 0) {
            e.preventDefault()
            error.innerText = "confirm the password"
            return false
        }
        console.log(inputs[3], inputs[2])
        if (!inputs[3].value.match(inputs[2].value)) {
            e.preventDefault()
            error.innerText = "password is not matched"
            return false
        }
        return true
    })
</script>