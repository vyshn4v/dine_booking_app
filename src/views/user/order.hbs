<section class="order-history" style="height: 85vh; width: 100%;">
    <div class="container-fluid my-5  d-flex  justify-content-center">
        <div class="card w-100">
            <div class="card-body ">
                <h4>home/order</h4>
                {{!-- {{#checklength orders 0}} --}}
                {{#each orders}}
                <div class="row">
                    <div class="col">
                        <div class="media">
                            <div class="media-body my-auto text-right">
                                <div class="order-card  my-auto flex-column flex-md-row">
                                    <div class=" my-auto flex-column align-items-center justify-content-center">
                                        <div
                                            class="sq align-self-center d-flex justify-content-center align-items-center">
                                            <img class="img-fluid  align-self-center"
                                                src="{{this.restaurant.profile_pic.0.url}}" width="135" height="135" />
                                        </div>
                                    </div>
                                    <div class=" my-auto flex-column align-items-center justify-content-center">
                                        <h4 class="mb-0 d-flex justify-content-center align-items-center">
                                            {{this.restaurant.restaurant_name}}
                                        </h4>
                                        <big class="mb-0 d-flex justify-content-center align-items-center">
                                            {{this.restaurant.email}}
                                        </big>
                                        <big class="mb-0 d-flex justify-content-center align-items-center">
                                            {{this.restaurant.address}}
                                        </big>

                                    </div>
                                    <div class="  my-auto flex-column align-items-center justify-content-center">
                                        <h6 class="d-flex justify-content-center align-items-center">status:
                                            <span>{{this.status}} </span>
                                        </h6>
                                        <h6 class="d-flex justify-content-center align-items-center">Date:
                                            <span>{{ this.date}} </span>
                                        </h6>

                                        <h6 class="d-flex justify-content-center align-items-center">Time:
                                            <span>{{ this.time}} </span>
                                        </h6>
                                        <h6 class="d-flex justify-content-center align-items-center">
                                            <!-- Button trigger modal -->
                                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                                data-target="#exampleModal{{this._id}}">
                                                Show tables
                                            </button>
                                        </h6>

                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1"
                                            role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="selected-tables">
                                                            <h6 class="ml-3" style="font-variant: small-caps;">selected
                                                                tables</h6>
                                                            <div class="foods">
                                                                <div id="products" style="display: none;"
                                                                    data-json="{{products}}"
                                                                    onload="setJson('{{products}}')">
                                                                </div>
                                                                <input type="hidden" value="">
                                                                {{#each this.tables}}
                                                                <input type="text" name="table" value="{{this._id}}"
                                                                    hidden>
                                                                <small class="card m-3">Table number :
                                                                    {{this.table_number}} <br> chair : {{this.chair}}
                                                                    <br> table : {{this.table}} </small>
                                                                {{/each}}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="  my-auto">
                                        <h6 class="mb-0 d-flex justify-content-center align-items-center"> Ordered Items
                                        </h6>
                                        <h6 class="swiper d-flex justify-content-center align-items-center">
                                            <div class="swiper mySwiper ">
                                                <div class="swiper-wrapper">
                                                    {{#each this.menu}}
                                                    <div
                                                        class="swiper-slide d-flex justify-content-center align-items-center">
                                                        <p class="text-primary">{{this.product_name}}<span
                                                                class="badge text-danger">{{this.quantity}}</span></p>
                                                        <br>
                                                    </div>
                                                    {{/each}}
                                                </div>
                                                <div class="buttons">
                                                    <div class="swiper-button-next">
                                                        <i class="fa-solid fa-angle-right"></i>
                                                    </div>
                                                    <div class="swiper-button-prev">
                                                        <i class="fa-solid fa-chevron-left"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </h6>
                                        <h6 class="mb-0 d-flex justify-content-center align-items-center">
                                            &#8377; {{this.total_price}}</h6>
                                        <div id="button{{this._id}}">
                                            {{#ifEquals status "pending"}}
                                            <h6 class="mt-4 d-flex justify-content-center align-items-center text-danger"
                                                onclick="cancelOrder('{{this._id}}')">
                                                <button class="btn btn-danger">
                                                    Cancel this order
                                                </button>
                                            </h6>
                                            {{/ifEquals}}
                                            {{#ifEquals status "canceled"}}
                                            <h6
                                                class="mt-4 d-flex text-danger justify-content-center align-items-center ">
                                                Order canceled</h6>
                                            {{/ifEquals}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                {{/each}}
                {{!-- {{else}}
                <hr>
                <div class="w-100 alert alert-warning" role="alert">
                    No orders found!
                </div>
                <hr>
                {{/checklength}} --}}
            </div>
        </div>
    </div>
</section>
{{!-- swiper cdn --}}
<link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
{{!-- css file --}}
<link rel="stylesheet" href="css/user/order.css">
{{!-- js file --}}
<script src="js/order.js"></script>
<link rel="stylesheet" href="/css/user/paymentDetails.css">
<script>
    function cancelOrder(orderid) {
        new swal({
            title: "Enter the fields",
            icon: "warning",
            buttons: ["cancel", "confirm"]
        }).then((status) => {
            if (status) {
                fetch("/cancel-order/" + orderid, {
                    method: 'GET'
                }).then((data) => data.json()).then((data) => {
                    if (data?.status) {
                        new swal({
                            title: "Confirm",
                            text: data.message,
                            icon: "success"
                        }).then(() => {
                            document.getElementById('button' + orderid).innerHTML = `<h6
                                class="mt-4 d-flex text-danger justify-content-center align-items-center ">
                                Order canceled</h6>`
                        })
                    } else {
                        new swal({
                            title: "Confirm",
                            text: "Order not canceled",
                            icon: "success"
                        })
                    }
                })
            }
        })
    }
</script>