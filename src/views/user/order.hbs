<section class="order-history">
    <div class="container-fluid my-5  d-flex  justify-content-center">
        <div class="card w-100">
            <div class="card-body ">
                <h4>home/order</h4>
                {{#each cart}}
                <div class="row">
                    <div class="col">
                        <div class="media">
                            <div class="media-body my-auto text-right">
                                <div class="order-card  my-auto flex-column flex-md-row">
                                    <div class=" my-auto flex-column align-items-center justify-content-center">
                                        <div
                                            class="sq align-self-center d-flex justify-content-center align-items-center">
                                            <img class="img-fluid  align-self-center" src="{{this.image2}}" width="135"
                                                height="135" />
                                        </div>
                                    </div>
                                    <div class=" my-auto flex-column align-items-center justify-content-center">
                                        <h4 class="mb-0 d-flex justify-content-center align-items-center">{{this.name}}
                                        </h4>
                                        <h6 class="mb-0 d-flex justify-content-center align-items-center"><a
                                                class="label" href="http://maps.google.com?q={{this.location.x}},{{this.location.y}}" target="_blank">location</a> </h6>
                                    </div>
                                    <div class="  my-auto flex-column align-items-center justify-content-center">
                                        <h6 class="d-flex justify-content-center align-items-center">Date:
                                            <span>{{this.date}} </span></h6>

                                        <h6 class="d-flex justify-content-center align-items-center">Time:
                                            <span>{{this.time}} </span></h6>

                                        <h6 class="d-flex justify-content-center align-items-center">Tables: <span>2
                                            </span></h6>
                                        <h6 class="d-flex justify-content-center align-items-center">Chairs: <span>4
                                            </span></h6>
                                    </div>
                                    <div class="  my-auto">
                                        <h6 class="mb-0 d-flex justify-content-center align-items-center"> Ordered Items
                                        </h6>
                                        <h6 class="swiper d-flex justify-content-center align-items-center">
                                            <div class="swiper mySwiper ">
                                                <div class="swiper-wrapper">
                                                    {{#each this.items}}
                                                    <div
                                                        class="swiper-slide d-flex justify-content-center align-items-center">
                                                        <p class="text-primary">{{this.name}}<span
                                                                class="badge text-danger">{{this.quantity}}</span></p>
                                                        <br>
                                                    </div>
                                                    {{/each}}
                                                </div>
                                                <div class="buttons">
                                                    <div class="swiper-button-next">
                                                        <i class="fa-solid fa-angle-right"></i>
                                                    </div>
                                                    <div class="swiper-button-prev">
                                                        <i class="fa-solid fa-chevron-left"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </h6>
                                        <h6 class="mb-0 d-flex justify-content-center align-items-center">
                                            &#8377;{{this.price}}</h6>
                                        <h6 class="mt-4 d-flex justify-content-center align-items-center "><a href=""
                                                class="text-danger">cancel this order</a></h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                {{/each}}
            </div>
        </div>
    </div>
</section>
