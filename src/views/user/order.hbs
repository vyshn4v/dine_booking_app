<section class="order-history" style="height: 85vh; width: 100%;">
    <div class="container-fluid my-5  d-flex  justify-content-center">
        <div class="card w-100">
            <div class="card-body ">
                <h4>home/order</h4>
                {{#checklength orders 0}}
                {{#each orders}}
                <div class="row">
                    <div class="col">
                        <div class="media">
                            <div class="media-body my-auto text-right">
                                <div class="order-card  my-auto flex-column flex-md-row">
                                    <div class=" my-auto flex-column align-items-center justify-content-center">
                                        <div
                                            class="sq align-self-center d-flex justify-content-center align-items-center">
                                            <img class="img-fluid  align-self-center"
                                                src="{{this.restaurant.profile_pic.0.url}}" width="135" height="135" />
                                        </div>
                                    </div>
                                    <div class=" my-auto flex-column align-items-center justify-content-center">
                                        <h4 class="mb-0 d-flex justify-content-center align-items-center">
                                            {{this.restaurant.restaurant_name}}
                                        </h4>

                                    </div>
                                    <div class="  my-auto flex-column align-items-center justify-content-center">
                                        <h6 class="d-flex justify-content-center align-items-center">status:
                                            <span>{{this.status}} </span>
                                        </h6>
                                        <h6 class="d-flex justify-content-center align-items-center">Date:
                                            <span>{{ this.date}} </span>
                                        </h6>

                                        <h6 class="d-flex justify-content-center align-items-center">Time:
                                            <span>{{dateFormat this.time}} </span>
                                        </h6>

                                        <h6 class="d-flex justify-content-center align-items-center">Tables: <span>2
                                            </span></h6>
                                        <h6 class="d-flex justify-content-center align-items-center">Chairs: <span>4
                                            </span></h6>
                                    </div>
                                    <div class="  my-auto">
                                        <h6 class="mb-0 d-flex justify-content-center align-items-center"> Ordered Items
                                        </h6>
                                        <h6 class="swiper d-flex justify-content-center align-items-center">
                                            <div class="swiper mySwiper ">
                                                <div class="swiper-wrapper">
                                                    {{#each this.menu}}
                                                    <div
                                                        class="swiper-slide d-flex justify-content-center align-items-center">
                                                        <p class="text-primary">{{this.product_name}}<span
                                                                class="badge text-danger">{{this.quantity}}</span></p>
                                                        <br>
                                                    </div>
                                                    {{/each}}
                                                </div>
                                                <div class="buttons">
                                                    <div class="swiper-button-next">
                                                        <i class="fa-solid fa-angle-right"></i>
                                                    </div>
                                                    <div class="swiper-button-prev">
                                                        <i class="fa-solid fa-chevron-left"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </h6>
                                        <h6 class="mb-0 d-flex justify-content-center align-items-center">
                                            &#8377;{{this.total_price}}</h6>
                                        {{#ifEquals status "canceled"}}
                                        <h6 class="mt-4 d-flex justify-content-center align-items-center "><a
                                                href="/cancel-order/{{this._id}}" class="text-danger">cancel this
                                                order</a></h6>
                                        {{else}}
                                        <h6 class="mt-4 d-flex text-danger justify-content-center align-items-center ">
                                            Refund is started,<br> please wait for 3-5 <br>working days</h6>
                                        {{/ifEquals}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                {{/each}}
                {{else}}
                <hr>
                <div class="w-100 alert alert-warning" role="alert">
                    No orders found!
                </div>
                <hr>
                {{/checklength}}
            </div>
        </div>
    </div>
</section>
